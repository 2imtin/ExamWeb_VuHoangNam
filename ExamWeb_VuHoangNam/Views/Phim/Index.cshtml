@model List<Phim>
<partial name="_ThongBao" />

<div class="row">
    <div class="col-md-6">
        <h2>Danh sách Phim </h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            Thêm mới
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựa đề</th>
            <th>Thể loại</th>
            <th>Giá vé </th>
            <th>Thời lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.TuaDe</td>
                <td>@(x.TrongNuoc ? "Việt Nam" :"Nước Ngoài")</td>
                <td>@x.GiaVe đ</td>
                <td>@x.ThoiLuong</td>
                <td>
                    <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                        Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                        Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-info pt-2">
    Thống kê: Có tất cả <b>@ViewBag.SUM </b> Phim - Giá vé cao nhất là: <b>@ViewBag.max</b> đồng
</div>
